<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒店位置"
            android:id="@+id/textView15"
            android:layout_weight="0.2"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_location_tv"
            android:layout_weight="1"
            android:textAlignment="center"
            android:phoneNumber="true"
            android:hint="市中心(1),火车站(2),郊区(3)" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低房间数"
            android:id="@+id/textView16"
            android:layout_weight="0.2"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_min_num_tv"
            android:layout_weight="1"
            android:phoneNumber="true"
            android:text="12"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间费用"
            android:id="@+id/textView17"
            android:layout_weight="0.2"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_cost_tv"
            android:layout_weight="1"
            android:phoneNumber="true"
            android:text="4"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间收入"
            android:id="@+id/textView18"
            android:layout_weight="0.2"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_income_tv"
            android:layout_weight="1"
            android:phoneNumber="true"
            android:text="6"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间折损率"
            android:id="@+id/textView9"
            android:layout_weight="0.2"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_equip_pre_tv"
            android:layout_weight="1"
            android:phoneNumber="true"
            android:text="0.12"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/hotel_template_create_confirm"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/hotel_template_create_cancel"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>