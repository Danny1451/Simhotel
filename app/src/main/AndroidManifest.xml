<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.real.simhotel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.SplashActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation|keyboardHidden|screenSize|navigation"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.LoginActivity"></activity>
        <activity android:name=".view.activity.HomeActivity"></activity>
        <activity
            android:name=".view.activity.student.StudentMainActivity"
            android:label="@string/student_main_title"
            android:theme="@style/ActionBarTheme">

        </activity>

        <activity
            android:name=".view.activity.teacher.TeacherMainActivity"
            android:theme="@style/ActionBarTheme"
            android:label="@string/teacher_main_title">

        </activity>

        <activity
            android:name=".view.activity.teacher.TeacherControlActivity"
            android:theme="@style/ActionBarTheme"
            android:label="@string/teacher_main_title">

        </activity>

        <activity
            android:name=".view.activity.TrainingChooseActivity"
            android:theme="@style/ActionBarTheme"
            android:label="@string/training_choose_title"
            ></activity>

        <activity android:name=".view.activity.teacher.TeacherTraningInitActivity"
            android:theme="@style/ActionBarTheme"
            android:label="实例初始化"></activity>

        <activity android:name=".view.activity.teacher.TeacherHRManagerActivity"
            android:theme="@style/ActionBarTheme"
            android:label="招聘管理"></activity>

    </application>



</manifest>